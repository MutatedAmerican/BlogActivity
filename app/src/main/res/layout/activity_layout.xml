<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200px"
    tools:context=".BlogActivity">

    <ListView
        android:id="@+id/ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:contentDescription="Image"
        android:id="@+id/blogThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/blogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000FF"
        android:textSize="35px"
        android:layout_toRightOf="@+id/blogThumbnail"/>

    <TextView
        android:id="@+id/blogAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogTitle"
        android:textColor="#F000"
        android:textSize="30px"
        android:layout_toRightOf="@+id/blogThumbnail"/>
    <TextView
        android:id="@+id/blogDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogAuthor"
        android:textColor="#FF0000"
        android:textSize="25px"
        android:layout_toRightOf="@+id/blogThumbnail"
/>

</RelativeLayout>
